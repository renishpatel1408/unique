<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- Define all groups FIRST -->
    <record id="group_unique_user" model="res.groups">
        <field name="name">Unique (User)</field>
    </record>

    <record id="group_unique_user_sale" model="res.groups">
        <field name="name">Unique (Sale)</field>
    </record>

    <record id="group_unique_purchase" model="res.groups">
        <field name="name">Unique (Purchase)</field>
    </record>

    <record id="group_unique_accounting" model="res.groups">
        <field name="name">Unique (Accounting)</field>
    </record>

    <record id="group_unique_employee" model="res.groups">
        <field name="name">Unique (Employee)</field>
    </record>

    <record id="group_unique_attendance" model="res.groups">
        <field name="name">Unique (Attendance)</field>
    </record>


    <!-- Now define Administrator group AFTER defining others -->
    <record id="group_unique_administrator" model="res.groups">
        <field name="name">Unique (Administrator)</field>
        <field name="implied_ids" eval="[
            (4, ref('custom_unique.group_unique_user')),
            (4, ref('custom_unique.group_unique_user_sale')),
            (4, ref('custom_unique.group_unique_purchase')),
            (4, ref('custom_unique.group_unique_accounting')),
            (4, ref('custom_unique.group_unique_employee')),
            (4, ref('custom_unique.group_unique_attendance')),
        ]"/>
    </record>

</odoo>
